cabal-version: 2.2
name:          shiba
version:       0.0.1
license:       MIT
author:        Jente Hidskes
maintainer:    dev@hjdskes.nl
build-type:    Simple

common shared-properties
  default-language: Haskell2010
  build-depends:
    , base
  ghc-options:
    -Wall
    -Werror

executable shiba-scraper
  import:         shared-properties
  hs-source-dirs:
    src
  main-is:
    Main.hs
  build-depends:
    , base
    , scalpel
    , tagsoup
